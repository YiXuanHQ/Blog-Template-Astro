---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={`å…³äº - ${SITE_TITLE}`} description="ä½ å¥½ï¼æˆ‘æ˜¯ä¸€åçƒ­çˆ±ç¼–ç¨‹çš„æŠ€æœ¯çˆ±å¥½è€…ã€‚è¿™ä¸ªåšå®¢æ˜¯æˆ‘çš„ä¸ªäººæŠ€æœ¯ç¬”è®°æœ¬å’Œç”Ÿæ´»è®°å½•æœ¬ã€‚" />
		<style>
			main {
				width: var(--max-width);
				max-width: calc(100% - 2.5rem);
			}
			.about-hero {
				position: relative;
				margin: 2rem 0;
				border-radius: 28px;
				padding: 2.6rem 2.6rem;
				background: linear-gradient(135deg, rgba(102, 126, 234, 0.18) 0%, rgba(118, 75, 162, 0.16) 55%, rgba(245, 190, 240, 0.14) 100%);
				border: 1px solid rgba(0, 0, 0, 0.06);
				overflow: hidden;
				box-shadow: 0 14px 40px rgba(0, 0, 0, 0.08);
			}
			.about-hero::before {
				content: '';
				position: absolute;
				inset: -40% -30% auto auto;
				width: 520px;
				height: 520px;
				background: radial-gradient(circle, rgba(102, 126, 234, 0.22), transparent 60%);
				filter: blur(10px);
				pointer-events: none;
			}
			.about-hero::after {
				content: '';
				position: absolute;
				inset: auto auto -40% -30%;
				width: 560px;
				height: 560px;
				background: radial-gradient(circle, rgba(245, 190, 240, 0.22), transparent 60%);
				filter: blur(12px);
				pointer-events: none;
			}
			.about-hero-badge {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				padding: 0.35rem 0.75rem;
				border-radius: 999px;
				background: rgba(20, 20, 20, 0.65);
				color: rgba(255, 255, 255, 0.92);
				font-size: 0.82rem;
				font-weight: 600;
				letter-spacing: 0.2px;
				backdrop-filter: blur(10px);
				position: relative;
				z-index: 2;
			}
			.about-hero-grid {
				display: grid;
				grid-template-columns: minmax(0, 1fr) 320px;
				align-items: center;
				gap: 2.4rem;
				margin-top: 1.8rem;
				position: relative;
				z-index: 2;
			}
			.about-hero-left {
				min-width: 0;
			}
			.about-hero-title {
				margin: 0;
				border: none;
				font-size: 2rem;
				font-weight: 800;
				letter-spacing: 0.3px;
				color: var(--color-text);
			}
			.about-hero-desc {
				margin: 0.9rem 0 0;
				color: var(--color-muted);
				font-size: 1.02rem;
				line-height: 1.7;
			}
			.about-hero-hashtag {
				margin-top: 0.9rem;
				font-size: 0.92rem;
				color: var(--color-muted);
			}
			.about-hero-tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.75rem;
				margin-top: 1.5rem;
			}
			.about-pill {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				padding: 0.6rem 0.9rem;
				border-radius: 999px;
				background: rgba(255, 255, 255, 0.72);
				border: 1px solid rgba(0, 0, 0, 0.08);
				box-shadow: 0 10px 18px rgba(0, 0, 0, 0.06);
				backdrop-filter: blur(10px);
				font-size: 0.92rem;
				color: var(--color-text);
				line-height: 1;
			}
			.about-pill strong {
				font-weight: 800;
			}
			.about-hero-actions {
				display: flex;
				flex-wrap: wrap;
				gap: 0.9rem;
				margin-top: 1.6rem;
			}
			.about-btn {
				display: inline-flex;
				align-items: center;
				justify-content: center;
				gap: 0.5rem;
				padding: 0.85rem 1.3rem;
				border-radius: 999px;
				border: 1px solid rgba(0, 0, 0, 0.08);
				background: rgba(255, 255, 255, 0.75);
				color: var(--color-text);
				font-weight: 700;
				text-decoration: none;
				cursor: pointer;
				transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
			}
			.about-btn.primary {
				background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
				color: white;
				border-color: transparent;
				box-shadow: 0 14px 26px rgba(102, 126, 234, 0.28);
			}
			.about-btn:hover {
				transform: translateY(-2px);
				box-shadow: 0 16px 30px rgba(0, 0, 0, 0.12);
			}
			.about-btn:active {
				transform: translateY(-1px);
			}
			.about-hero-right {
				display: flex;
				flex-direction: column;
				align-items: center;
				gap: 1rem;
			}
			.avatar-ring-wrap {
				position: relative;
				width: 140px;
				height: 140px;
				border-radius: 50%;
				padding: 5px;
				background: conic-gradient(from 180deg, #f093fb, #667eea, #4facfe, #43e97b, #f093fb);
				box-shadow: 0 18px 40px rgba(0, 0, 0, 0.18);
			}
			.avatar-ring-wrap img {
				width: 100%;
				height: 100%;
				border-radius: 50%;
				object-fit: cover;
				display: block;
				border: 4px solid rgba(255, 255, 255, 0.9);
			}
			.status-pill {
				margin-top: -0.6rem;
				display: inline-flex;
				align-items: center;
				gap: 0.55rem;
				padding: 0.55rem 0.9rem;
				border-radius: 999px;
				background: rgba(25, 25, 25, 0.7);
				color: rgba(255, 255, 255, 0.92);
				backdrop-filter: blur(10px);
				box-shadow: 0 14px 30px rgba(0, 0, 0, 0.22);
				font-size: 0.88rem;
			}
			.status-dot {
				width: 10px;
				height: 10px;
				border-radius: 50%;
				background: #34d399;
				box-shadow: 0 0 0 4px rgba(52, 211, 153, 0.18);
			}
			.hobby-chips {
				display: flex;
				flex-wrap: wrap;
				gap: 0.65rem;
				justify-content: center;
				margin-top: 0.4rem;
			}
			.hobby-chip {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				padding: 0.55rem 0.85rem;
				border-radius: 999px;
				background: rgba(255, 255, 255, 0.72);
				border: 1px solid rgba(0, 0, 0, 0.08);
				box-shadow: 0 10px 18px rgba(0, 0, 0, 0.06);
				backdrop-filter: blur(10px);
				font-size: 0.9rem;
				color: var(--color-text);
				line-height: 1;
			}
			#contact {
				scroll-margin-top: 90px;
			}
			.content-section {
				margin: 2.2rem 0;
				padding: 1.8rem 1.9rem;
				border-radius: 22px;
				border: 1px solid rgba(0, 0, 0, 0.06);
				background: rgba(255, 255, 255, 0.65);
				box-shadow: 0 14px 36px rgba(0, 0, 0, 0.06);
				backdrop-filter: blur(10px);
				transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease, background 0.2s ease;
			}
			.content-section:hover {
				transform: translateY(-2px);
				box-shadow: 0 18px 46px rgba(0, 0, 0, 0.09);
				border-color: rgba(93, 103, 232, 0.22);
			}
			.content-section h2 {
				font-size: 1.55rem;
				margin: 0 0 1rem;
				letter-spacing: 0.2px;
			}
			.content-section p {
				color: var(--color-muted);
				line-height: 1.75;
				margin: 0.85rem 0;
			}
			.content-section ul {
				margin: 0.9rem 0 0;
				padding-left: 1.2rem;
			}
			.content-section ul li {
				margin-bottom: 0.55rem;
			}
			.section-kicker {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				padding: 0.35rem 0.75rem;
				border-radius: 999px;
				background: rgba(102, 126, 234, 0.12);
				border: 1px solid rgba(102, 126, 234, 0.18);
				color: rgba(40, 46, 110, 0.92);
				font-weight: 800;
				font-size: 0.85rem;
				letter-spacing: 0.2px;
				margin-bottom: 0.9rem;
			}
			.findme {
				display: grid;
				grid-template-columns: minmax(0, 1fr) 360px;
				align-items: center;
				gap: 1.6rem;
				position: relative;
				overflow: hidden;
				background: linear-gradient(135deg, rgba(240, 147, 251, 0.16) 0%, rgba(102, 126, 234, 0.14) 50%, rgba(79, 172, 254, 0.12) 100%);
				border-color: rgba(102, 126, 234, 0.12);
			}
			.content-section.findme {
				padding: 1.4rem 1.6rem;
			}
			.findme::before {
				content: '';
				position: absolute;
				inset: -40% -30% auto auto;
				width: 520px;
				height: 520px;
				background: radial-gradient(circle, rgba(240, 147, 251, 0.22), transparent 60%);
				filter: blur(12px);
				pointer-events: none;
			}
			.findme > * {
				position: relative;
				z-index: 1;
			}
			.findme-title {
				margin: 0.2rem 0 0.5rem;
				font-size: 1.55rem;
				font-weight: 900;
				letter-spacing: 0.2px;
			}
			.findme-actions {
				display: flex;
				flex-wrap: wrap;
				gap: 0.7rem;
				margin-top: 1rem;
			}
			.findme-chip {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				padding: 0.55rem 0.85rem;
				border-radius: 999px;
				background: rgba(255, 255, 255, 0.72);
				border: 1px solid rgba(0, 0, 0, 0.06);
				font-weight: 700;
				color: var(--color-text);
				box-shadow: 0 10px 18px rgba(0, 0, 0, 0.06);
				backdrop-filter: blur(10px);
				text-decoration: none;
				transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
			}
			.findme-chip:hover {
				transform: translateY(-2px);
				box-shadow: 0 14px 26px rgba(0, 0, 0, 0.1);
			}
			.xiaohongshu-image {
				max-width: 450px;
				width: 100%;
				border-radius: 16px;
				margin: 0.6rem auto 0;
				display: block;
				box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
				transition: transform 0.3s ease, box-shadow 0.3s ease;
			}
			.findme .xiaohongshu-image {
				max-width: 320px;
				margin-top: 0.35rem;
			}
			.xiaohongshu-image:hover {
				transform: translateY(-4px);
				box-shadow: 0 12px 32px rgba(0, 0, 0, 0.18);
			}
			.xiaohongshu-wrapper {
				text-align: center;
				margin: 0.4rem 0 0;
			}
			.findme .xiaohongshu-wrapper {
				margin-top: 0;
			}
			.contact-card img {
				max-width: 180px;
				width: 100%;
				border-radius: 12px;
				margin-top: 0.5rem;
				display: block;
				margin-left: auto;
				margin-right: auto;
			}
			.content-section h3 {
				font-size: 1.3rem;
				margin-top: 2rem;
				margin-bottom: 0.8rem;
			}
			.skill-tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.6rem;
				margin: 1.2rem 0;
			}
			.skill-tag {
				display: inline-block;
				background: var(--color-surface-subtle);
				border: 1px solid var(--color-border);
				padding: 0.5rem 1rem;
				border-radius: var(--radius-pill);
				font-size: 0.9em;
				transition: all 0.3s ease;
			}
			.skill-tag:hover {
				transform: translateY(-2px);
				box-shadow: 0 4px 12px rgba(93, 103, 232, 0.2);
				border-color: var(--color-primary);
			}
			.philosophy-box {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: 1.2rem;
				margin: 2rem 0;
			}
			.philosophy-item {
				background: var(--color-surface);
				border: 1px solid var(--color-border);
				border-radius: var(--radius-card);
				padding: 1.5rem;
				text-align: center;
				transition: all 0.3s ease;
			}
			.philosophy-item:hover {
				transform: translateY(-5px);
				box-shadow: var(--shadow-soft);
				border-color: var(--color-primary);
			}
			.philosophy-item h3 {
				margin-top: 0;
				margin-bottom: 0.8rem;
				border: none;
				font-size: 1.1rem;
			}
			.philosophy-item p {
				margin: 0;
				color: var(--color-muted);
			}
			.goals-list {
				background: var(--color-surface-subtle);
				border-radius: var(--radius-card);
				padding: 1.8rem;
				margin: 2rem 0;
				border: 1px solid var(--color-border);
			}
			.goal-item {
				font-size: 1rem;
				padding: 0.8rem 0;
				border-bottom: 1px solid var(--color-border);
				display: flex;
				align-items: center;
				gap: 0.6rem;
			}
			.goal-item:last-child {
				border-bottom: none;
			}
			.goal-item input[type='checkbox'] {
				width: 18px;
				height: 18px;
				cursor: not-allowed;
			}
			.contact-cards {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: 1.2rem;
				margin: 2rem 0;
			}
			.contact-card {
				background: var(--color-surface);
				border: 1px solid var(--color-border);
				border-radius: var(--radius-card);
				padding: 1.8rem;
				text-align: center;
				transition: all 0.3s ease;
			}
			.contact-card:hover {
				transform: translateY(-5px);
				box-shadow: var(--shadow-soft);
				border-color: var(--color-primary);
			}
			.contact-icon {
				font-size: 3rem;
				margin-bottom: 1rem;
			}
			.contact-card h3 {
				margin: 0.8rem 0;
				border: none;
				font-size: 1.1rem;
			}
			.contact-card a {
				color: var(--color-primary);
				text-decoration: none;
				font-weight: 600;
			}
			.contact-card a:hover {
				text-decoration: underline;
			}
			.contact-card img {
				max-width: 100%;
				border-radius: 16px;
				margin-top: 0.5rem;
			}
			.motto-box {
				background: var(--color-surface-subtle);
				border-left: 4px solid var(--color-primary);
				padding: 1.5rem 1.8rem;
				margin: 1.5rem 0;
				border-radius: 8px;
			}
			.motto-box blockquote {
				font-style: italic;
				font-size: 1rem;
				line-height: 1.6;
				margin: 0;
				border: none;
				color: var(--color-text);
			}
			.motto-author {
				text-align: right;
				margin-top: 0.8rem;
				color: var(--color-muted);
				font-weight: 600;
				font-size: 0.9em;
			}
			.final-section {
				text-align: center;
				margin-top: 3rem;
				padding: 2rem;
			}
			.final-section h3 {
				margin-top: 0;
			}
			.final-section p {
				color: var(--color-muted);
				margin: 1.2rem 0;
			}
			.contact-button {
				display: inline-block;
				padding: 0.8rem 2rem;
				background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
				color: white !important;
				border-radius: 25px;
				text-decoration: none;
				font-weight: 700;
				transition: all 0.3s ease;
				margin-top: 1.5rem;
				box-shadow: 0 4px 16px rgba(93, 103, 232, 0.3);
			}
			.contact-button:hover {
				transform: translateY(-2px);
				box-shadow: 0 6px 20px rgba(93, 103, 232, 0.4);
			}
			ul {
				line-height: 1.8;
			}
			ul li {
				margin-bottom: 0.5rem;
			}
			@media (max-width: 768px) {
				main {
					max-width: calc(100% - 1.5rem);
				}
				.about-hero {
					padding: 2rem 1.4rem;
				}
				.about-hero-grid {
					grid-template-columns: 1fr;
					gap: 1.8rem;
				}
				.about-hero-title {
					font-size: 1.65rem;
				}
				.avatar-ring-wrap {
					width: 124px;
					height: 124px;
				}
				.about-hero-actions {
					gap: 0.75rem;
				}
				.philosophy-box,
				.contact-cards {
					grid-template-columns: 1fr;
				}
				.xiaohongshu-image {
					max-width: 100%;
					margin: 1.5rem auto;
				}
				.contact-card img {
					max-width: 150px;
				}
				.content-section {
					padding: 1.4rem 1.2rem;
					border-radius: 18px;
				}
				.findme {
					grid-template-columns: 1fr;
				}
			}
			.music-player-section {
				margin-top: 1.5rem;
			}
			.music-player-container {
				position: relative;
				max-width: 500px;
				margin: 0 auto;
			}
			.music-player-main {
				display: flex;
				align-items: center;
				gap: 0.75rem;
				padding: 1rem 1.2rem;
				border-radius: 16px;
				border: 1px solid rgba(148, 163, 233, 0.6);
				background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(238, 242, 255, 0.9));
				box-shadow: 0 10px 28px rgba(93, 103, 232, 0.12);
				cursor: pointer;
				transition: transform 0.18s ease, box-shadow 0.18s ease, border-color 0.18s ease;
			}
			.music-player-main:hover {
				transform: translateY(-2px);
				box-shadow: 0 12px 30px rgba(93, 103, 232, 0.2);
			}
			.music-player-main.is-playing {
				border-color: rgba(93, 103, 232, 0.8);
				box-shadow: 0 12px 30px rgba(93, 103, 232, 0.2);
			}
			.music-controls-panel {
				margin-top: 1rem;
				padding: 1rem 1.2rem;
				border-radius: 16px;
				border: 1px solid rgba(148, 163, 233, 0.45);
				background: var(--color-surface);
				box-shadow: 0 18px 44px rgba(15, 23, 42, 0.22);
				display: grid;
				gap: 0.75rem;
			}
			.music-progress-row {
				display: grid;
				grid-template-columns: 1fr auto;
				align-items: center;
				gap: 0.75rem;
			}
			.music-progress-bar {
				position: relative;
				height: 8px;
				border-radius: 999px;
				background: rgba(148, 163, 233, 0.28);
				overflow: hidden;
				cursor: pointer;
			}
			.music-progress-fill {
				position: absolute;
				left: 0;
				top: 0;
				bottom: 0;
				width: 0%;
				border-radius: inherit;
				background: linear-gradient(90deg, #6366f1, #8b5cf6, #ec4899);
				transition: width 0.12s linear;
			}
			.music-time {
				font-size: 0.8rem;
				color: var(--color-muted);
				white-space: nowrap;
			}
			.music-controls-row {
				display: flex;
				align-items: center;
				justify-content: space-between;
				gap: 0.75rem;
			}
			.music-control-btn {
				flex: 1;
				border-radius: 999px;
				border: 1px solid rgba(148, 163, 233, 0.6);
				background: linear-gradient(135deg, rgba(248, 250, 252, 0.96), rgba(232, 238, 255, 0.96));
				color: var(--color-text);
				font-size: 0.9rem;
				padding: 0.6rem 0.8rem;
				cursor: pointer;
				transition: background 0.18s ease, border-color 0.18s ease, transform 0.12s ease, color 0.18s ease;
			}
			.music-control-btn.icon {
				flex: 0 0 auto;
				width: 40px;
				height: 40px;
				padding: 0;
				display: inline-flex;
				align-items: center;
				justify-content: center;
				border-radius: 999px;
				font-size: 1rem;
				line-height: 1;
				user-select: none;
			}
			.music-control-btn.icon.primary {
				width: 72px;
				height: 40px;
				border-color: rgba(93, 103, 232, 0.75);
				background: linear-gradient(135deg, rgba(99, 102, 241, 0.16), rgba(236, 72, 153, 0.14));
			}
			.music-control-btn:hover {
				transform: translateY(-1px);
				border-color: rgba(93, 103, 232, 0.9);
				background: rgba(93, 103, 232, 0.12);
				color: var(--color-primary);
			}
			.music-visual {
				display: inline-flex;
				align-items: center;
				gap: 4px;
			}
			.music-visual .bar {
				display: inline-block;
				width: 4px;
				border-radius: 999px;
				background: linear-gradient(180deg, rgba(99, 102, 241, 0.95), rgba(147, 197, 253, 0.85));
				height: 12px;
				transform-origin: bottom center;
				animation: none;
			}
			.music-player-main.is-playing .bar {
