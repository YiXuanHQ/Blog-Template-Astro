import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			/* é¦–é¡µå•ç‹¬æŠŠ main çš„ä¸Šå†…è¾¹è·å»æ‰ï¼Œè®© Hero ç´§è´´é¡¶éƒ¨å¯¼èˆª */
			main {
				padding-top: 0;
			}
			/* é¦–é¡µæ•´ä½“èƒŒæ™¯é€‚é…æ·±æµ…è‰² */
			:global(body.home) {
				background: var(--color-surface);
			}

			/* å‡ ä½•èƒŒæ™¯åŒ…è£…å™¨ - åªåœ¨é¡¶éƒ¨ Banner åŒºåŸŸæ˜¾ç¤º */
			.geometric-background-wrapper {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 1000px; /* é™åˆ¶é«˜åº¦ï¼Œåªè¦†ç›– Banner åŒºåŸŸ */
