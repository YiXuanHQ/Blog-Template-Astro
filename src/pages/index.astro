			}

			.tutorial-cards .module-title {
				font-size: 0.85em;
				font-weight: 600;
				color: var(--text-color, #2c3e50);
				margin-bottom: 12px;
				display: flex;
				align-items: center;
				opacity: 0.9;
				flex-shrink: 0;
			}

			.tutorial-cards .module-list {
				list-style: none;
