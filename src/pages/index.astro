				}
				50% {
					transform: translateY(-15px) translateX(-20px);
				}
				75% {
					transform: translateY(-40px) translateX(10px);
				}
			}

			/* æ—‹è½¬åŠ¨ç”» */
			@keyframes rotate {
				from {
					transform: rotate(0deg);
				}
